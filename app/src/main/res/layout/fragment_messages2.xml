<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Messages2Fragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/title_page_msg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Messagerie"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071" />

    <ImageView
        android:id="@+id/profil_icon_1"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:src="@drawable/circular_profil_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_page_msg2"
        app:layout_constraintVertical_bias="0.113" />

    <TextView
        android:id="@+id/char1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/profil_icon_1"
        app:layout_constraintEnd_toEndOf="@+id/profil_icon_1"
        app:layout_constraintStart_toStartOf="@+id/profil_icon_1"
        app:layout_constraintTop_toTopOf="@+id/profil_icon_1" />

    <TextView
        android:id="@+id/name_profil_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:text="Sonia"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/message1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toEndOf="@+id/profil_icon_1"
        app:layout_constraintTop_toBottomOf="@+id/title_page_msg2"
        app:layout_constraintVertical_bias="0.985" />

    <TextView
        android:id="@+id/message1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Je serai intéressée d'avoir votre\n candidature, votre dossier"
        android:textColor="#CCCCCC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toEndOf="@+id/profil_icon_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.245" />

    <ImageView
        android:id="@+id/profil_icon_2"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:src="@drawable/circular_profil_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profil_icon_1"
        app:layout_constraintVertical_bias="0.113" />

    <TextView
        android:id="@+id/char2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/profil_icon_2"
        app:layout_constraintEnd_toEndOf="@+id/profil_icon_2"
        app:layout_constraintStart_toStartOf="@+id/profil_icon_2"
        app:layout_constraintTop_toTopOf="@+id/profil_icon_2" />

    <TextView
        android:id="@+id/name_profil_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lucas"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/message2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toEndOf="@+id/profil_icon_2"
        app:layout_constraintTop_toBottomOf="@+id/message1"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/message2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Malheureusement, votre\n candidature n'a pas été concluant."
        android:textColor="#CCCCCC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.138"
        app:layout_constraintStart_toEndOf="@+id/profil_icon_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.404" />


</androidx.constraintlayout.widget.ConstraintLayout>